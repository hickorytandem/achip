<h1>Edit profile</h1>
<%# Avatar %>
<% if @user.avatar.attached? %>
  <%= cl_image_tag @user.avatar.key, class: "avatar-xl border border-primary m-3" %>
<% else %>
  <%= image_tag "images.jpg", alt: "Profile image", class: "avatar-xl border border-primary m-3" %>
<% end %>

<%# Form %>
<div class="container m-3">
  <%= simple_form_for(@user) do |f| %>
    <%= f.input :avatar, as: :file %>
    <%= f.input :name %>
    <%= f.input :email, disabled: true %>
    <%= f.input :bio, as: :text %>
    <%= f.input :location %>
    <%= f.input :speciality, as: :collection_select, collection: ["IT", "Film", "Marketing", "Cooking", "UX Design"] %>
    <%= f.button :submit, "Save", class: "btn btn-primary mt-3" %>
  <% end %>
</div>
