<div class="container">
  <div class="page-title">
    <h1>My Profile</h1>
  </div>
</div>

<div class="container d-flex mb-5 justify-content-between">
    <%# Left container %>
    <div class="col-5 mr-3 pl-0">
      <div class="card profile p-3">
        <%= avatar_for(@user, "avatar-xl border border-primary m-3") %>
        <div class="card-body">
          <p class="card-title mt-3" style="font-size: 24px;"><strong><%= @user.name %></strong></p>
          <p class="card-subtitle mb-3 text-muted"><%= @user.speciality %></p>
          <br>
          <p class="mb-2"><strong>Email: </strong><%= @user.email %></p>
          <p class="mb-3 pb-4 border-bottom"><strong>Location: </strong><%= @user.location %></p>
          <p class="card-text">
            <p style="font-size: 16px;"><strong>About me</strong></p>
            <p class="mt-3"><%= @user.bio %></p>
          </p>
        </div>
      </div>
    </div>
    <%# Right container %>
    <div class="card booking-session col-7"style="padding: 32px 24px 16px 24px;">
    <div class="card-body m-0">
      <p class="card-title" style="font-size: 24px;"><strong>Settings</strong></p>
      <div class="list-setting border-bottom mt-5">
        <div class="list-info">
          <h3>Edit profile</h3>
          <p>Update your profile with your most recent information</p>
        </div>
        <div class="list-action">
          <%= link_to 'Edit profile', edit_user_path(@user), class: "btn btn-primary" %>
        </div>
      </div>

      <div class="list-setting border-bottom">
        <div class="list-info">
          <h3>View dashboard</h3>
          <p>Manage your sessions and bookings</p>
        </div>
        <div class="list-action">
          <%= link_to 'My dashboard', dashboard_path, class: "btn btn-primary" %>
        </div>
      </div>

      <div class="list-setting">
        <div class="list-info">
          <h3>Delete account</h3>
          <p>Permanently delete your account. All your data will be removed, this can't be undone</p>
        </div>
        <div class="list-action">
          <button class="btn btn-outline-primary" style="border: 1px solid $black;">Delete</button>
        </div>
      </div>
    </div>
  </div>
</div>
