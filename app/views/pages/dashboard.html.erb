<div class="container">
   <div class="row section-title mb-3">
      <h2 class="align-middle">My Dashboard</h2>
      <button type ="button" class= "btn btn-primary">
         <%= link_to "Create mentor session", new_consultation_path, class: "align-middle" %>
      </button>
   </div>
</div>

<div class="container">
   <div class="row">
      <div class="col-4 d-flex justify-content-around ">
        <div class="card-dashboard mb-3" style="width: 27rem; border-radius: 5px;">
          <div class="card-dashboard-infos">
            <h2>My Sessions</h2>
            <p>0</p>
          </div>
        </div>
      </div>

      <div class="col-4 d-flex justify-content-around">
        <div class="card-dashboard mb-3" style="width: 27rem; border-radius: 5px;">
          <div class="card-dashboard-infos">
            <h2>Booking request</h2>
            <p>3</p>
          </div>
        </div>
      </div>
      <div class="col-4 d-flex justify-content-around ">
        <div class="card-dashboard mb-3" style="width: 27rem; border-radius: 5px;">
          <div class="card-dashboard-infos">
            <h2>My bookings</h2>
            <p>12</p>
          </div>
        </div>
      </div>
   </div>
        
  </div>

<% @bookings.each do |booking| %>
   <p>Title: <%= booking.consultation.title %></p>
   <p>Price: $<%= booking.consultation.price %></p>
   <p>Duration: <%= booking.consultation.duration %></p>
   <p>Mentor: <%= booking.consultation.user.name %></p>
   <p>Speciality: <%= booking.consultation.user.speciality %></p>
   <p>Date: <%= booking.date_time.strftime('%B %d, %Y') %></p>
   <p>Booking status: <%= booking.status %></p>
   <hr>
<% end %>

