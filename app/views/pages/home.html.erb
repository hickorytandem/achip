<%# Banner %>
<div class="banner" style="background-image: url(<%= image_url('banner-02.png') %>); height: 480px;">
  <div class="container col-md-8 col-sm-12">
    <div class="text-center">
      <h1>Find a mentor to guide you for <br>the future ahead</h1>
      <p>Work with leading mentors and gain access to personalized guidance to reach your potential. Ongoing sessions and expert advice, on your terms, all for a flat price.</p>
      <%= link_to "Explore mentors", consultations_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<%# Industry Mentor %>
<div class="container">
  <div class="section">
    <div class="d-flex flex-column text-center justify-content-center">
      <h2 class="mt-5 mb-5">Get mentored by industry veterans</h2>
      <%= image_tag "https://res.cloudinary.com/hickorytandem/image/upload/v1627110299/companies-logo-02_pq7ifq.png", alt: "Company logos", class: "mentor-logo mb-5" %>
      <%= image_tag "https://res.cloudinary.com/hickorytandem/image/upload/v1627110299/companies-logo-01_cjoypm.png", alt: "Company logos", class: "mentor-logo mb-5"%>
    </div>
  </div>
</div>

<%# Browse by expertise %>
<%= render 'shared/card_carousel' %>

<%# Now trending %>
<div class="trending container d-flex justify-content-between">
    <h2>Now trending</h2>
    <%= link_to "Explore more", consultations_path %>
</div>

<%# Consultations %>
<%# col-lg-5 col-md-7 col-sm-12 %>
<div class="container d-flex flex-wrap">
  <% @consultations.first(6).each do |consultation| %>
    <div class="card-frame col-lg-6 col-md-8 col-sm-12">
      <%= link_to consultation_path(consultation), action: 'go' do %>
        <div class="card-product">
            <%= image_tag 'https://source.unsplash.com/random', alt: "Consultant image" %>
            <div class="card-product-infos">
              <%# Badge %>
              <div class="consultation-badges d-flex">
                <%= link_to consultation.user.speciality, consultations_path ,class: "badge badge-primary mb-3"  %>
                <%# Keep for Booking status %>
                <%# <span class="badge badge-primary">Status</span> %>
              </div>
              <%# Title + Description %>
              <div class="consultation-title">
                <h2><%= consultation.title %></h2>
                <p style="opacity: .7;"><%= consultation.user.name %></p>
              </div>
              <%# Price %>
              <p class="consultation-price" style="font-size: 16px;"><strong><%= consultation.price %>â‚¬ / <%= consultation.duration %> min</strong></p>
            </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

  <div class="section">
    <div class="row d-flex justify-content-center">
      <div class="col-12">
        <div class="card-product-big mb-3">
          <div class="card-product-infos">
            <h2 style="color: white">Share your expertise, make a difference.</h2>
            <p>Guiding professionals around the world to have them reach their goals.</p>
            <%= link_to "Become a mentor", new_user_registration_path, class:"btn btn-light", style:"margin-left: 32px;" %>
          </div>
          <%= image_tag "https://www.freundevonfreunden.com/wp-content/uploads/Freunde-von-Freunden-Ronan-and-Erwan-Bouroullec-7688-1600x1200.jpg", alt: "alttext" %>
        </div>
      </div>
    </div>
  </div>

