<div class="container">
  <h1><%= @consultation.title %></h1>
  <p><strong>Description: </strong><%= @consultation.description %></p>
  <p><strong>Price: </strong>$<%= @consultation.price %></p>
  <p><strong>Duration: </strong><%= @consultation.duration %>mins</p>

  <%= simple_form_for [ @consultation, @booking ] do |f| %>
    <%= f.input :date_time, as: :date, html5: true %>
    <%= f.submit "Booking session", class: "btn btn-primary" %>
  <% end %>
</div>
