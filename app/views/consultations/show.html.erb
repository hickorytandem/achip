<div class="container">
  <h1 class="page-title">Book a session</h1>
  <div class="row d-flex justify-content-around mb-5">
    <div class="col-5">
      <div class="card profile p-3">
        <%= avatar_for(@consultation.user, "avatar-xl border border-primary m-3") %>
        <div class="card-body">
          <p class="card-title mt-3" style="font-size: 24px;"><strong><%= @consultation.user.name %></strong></p>
          <p class="card-subtitle mb-3 text-muted"><%= @consultation.user.speciality %></p>
          <br>
          <p class="mb-2"><strong>Email: </strong><%= @consultation.user.email %></p>
          <p class="mb-3 pb-4 border-bottom"><strong>Location: </strong><%= @consultation.user.location %></p>
          <p class="card-text">
            <p style="font-size: 16px;"><strong>About me</strong></p>
            <p class="mt-3"><%= @consultation.user.bio %></p>
          </p>
        </div>
      </div>
    </div>
    <div class="col-7">
      <div class="card booking-session p-3">
        <div class="card-body">
          <%= link_to @consultation.user.speciality, consultations_path ,class: "badge badge-primary btn-sm mb-3"  %>
          <div class="row">
            <div class="col-9">
             <p class="card-title mt-3" style="font-size: 24px;"><strong><%= @consultation.title %></strong></p>
            </div>
            <div class="col-3">
              <p class="card-title mt-3 text-right" style="font-size: 24px;"><strong>$<%= @consultation.price %></strong></p>
            </div>
          </div>
          <p class="card-subtitle mb-3 text-muted"><%= @consultation.duration %> min</p>
          <br>
          <p class="mb-2"><%= @consultation.description %></p>
          <% if @consultation.user == @current_user %>
          <div class="card-text mt-5 d-flex justify-content-end">
            <%= link_to "Edit", edit_consultation_path, class: "btn btn-primary mr-2" %>
            <%= link_to "Delete", consultation_path(@consultation), class: "btn btn-primary", method:  :delete, data: { confirm: "Are you sure?"} %>
          </div>
          <% else %>
          <div class="card-text mt-5">
            <p style="font-size: 16px;"><strong>Choose session time</strong></p>
            <%= simple_form_for [ @consultation, @booking ] do |f| %>
              <%= f.input :date_time, as: :date, html5: true, label: false, required: true %>
              <%= f.submit "Booking session", class: "btn btn-primary float-right" %>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


