<div class="container">
  <div class="page-title">
    <h1>All Sessions</h1>
    <%= link_to "Add a new consultation", new_consultation_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="container section">
  <div class="card-row">
    <% @consultations.each do |consultation| %>
      <div class="card-column">
        <%= link_to consultation_path(consultation), action: 'go' do %>
          <div class="card-product">
            <%= avatar_for(consultation.user, "card-product-image") %>
            <div class="card-product-infos">
              <%# Badge %>
              <div class="consultation-badges d-flex">
                <span class="badge badge-primary mb-3"><%= consultation.user.speciality %></span>
                <%# Keep for Booking status %>
                <%# <span class="badge badge-primary">Status</span> %>
              </div>
              <%# Title + Description %>
              <div class="consultation-title">
                <h2><%= consultation.title %></h2>
                <p style="opacity: .7;"><%= consultation.user.name %></p>
              </div>
              <%# Price %>
              <p class="consultation-price" style="font-size: 16px;"><strong><%= consultation.price %>â‚¬ / <%= consultation.duration %> mins</strong></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
